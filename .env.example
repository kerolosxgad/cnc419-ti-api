IOC_SOURCE_SPAMHAUS=true
IOC_SOURCE_EMERGING_THREATS=true
IOC_SOURCE_OTX=true
IOC_SOURCE_BAZAAR=true
IOC_SOURCE_DSHIELD_OPENIOC=true
IOC_SOURCE_DSHIELD_THREATFEEDS=true
